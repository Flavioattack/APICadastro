@model List<APIProjetoUpd8.Models.Cliente>
@{
    ViewData["Title"] = "Lista de Clientes";
}

<div class="list-group">
    <div class="text-center">

        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            <a class="btn btn-primary" role="button" asp-controller="Cliente" asp-action="Cadastro">Adicionar novo Cliente</a>
        </div>
        <br />
        @if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success" role="alert">
                <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
                @TempData["MensagemSucesso"]
            </div>
        }
        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger" role="alert">
                <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
                @TempData["MensagemErro"]
            </div>
            <br />
        }
        <h1 class="display-4">Lista de Clientes</h1>
        <table class="table id='myTable' table-borderless table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">CPF</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Data de Nascimento</th>
                    <th scope="col">Sexo</th>
                    <th scope="col">Endereco</th>
                    <th scope="col">Estado</th>
                    <th scope="col">Cidade</th>

                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var cliente in Model)
                    {

                        <tr>
                            <th scope="row">@cliente.Id</th>
                            <td>@cliente.Cpf</td>
                            <td>@cliente.Nome</td>
                            <td>@cliente.DataNascimento</td>
                            <td>@cliente.Sexo</td>
                            <td>@cliente.Endereco</td>
                            <td>@cliente.Estado</td>
                            <td>@cliente.Cidade</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a role="button" class="btn btn-primary" onclick="PreencheCliente(@cliente.Id)">Editar</a>
                                </div>
                            </td>
                        </tr>
                        @* }*@
                    }
                }

            </tbody>
        </table>
    </div>
</div>
<div>
    <form asp-controller="Cliente" asp-action="Cadastro" method="post">
        <section class="wrap">
            <div class="form-group">
                <label for="cpf">CPF</label>
                <input type="text" class="form-group col-md-2" placeholder="Digite o cpf do cliente" />
                @Html.ValidationMessageFor(x => x[0].Cpf)
            </div>
            <div class="form-group">
                <label for="nome">Nome</label>
                <input type="text" id="Nome" class="form-control" placeholder="Digite o nome do cliente" />
                @Html.ValidationMessageFor(x => x[0].Nome)
            </div>
            <div class="form-group">
                <label for="DataNascimento">Data de Nascimento</label>
                <input type="date" id="DataNascimento" class="form" placeholder="Selecione a data de nascimento" />
                @Html.ValidationMessageFor(x => x[0].DataNascimento)
            </div>
            <div class="form-group">
                <label for="Sexo">Sexo</label>
                <br />
                <input type="radio" id="Sexo" value="F" name="Sexo" placeholder="Feminino" /> Feminino
                <input type="radio" id="Sexo" value="M" name="Sexo" placeholder="Masculino" /> Masculino
                @Html.ValidationMessageFor(x => x[0].Sexo)
            </div>
            <div class="form-group">
                <label for="nome">Endereço</label>
                <input type="text" id="Endereco" class="form-control" placeholder="Digite o endereço do cliente" />
                @Html.ValidationMessageFor(x => x[0].Endereco)
            </div>
            <div class="form-group">
                <label for="Estado">Estado</label>
                <input type="text" id="Estado" class="form-control" placeholder="Digite o nome do contato" />
                @Html.ValidationMessageFor(x => x[0].Estado)
            </div>
            <div class="form-group">
                <label for="cidade">Municipio</label>
                <input type="text" id="Cidade" class="form-control" placeholder="Digite o nome do contato" />
                @Html.ValidationMessageFor(x => x[0].Cidade)
            </div>
        </section>
        <button type="submit" class="btn btn-primary btn-block">Buscar</button>
        <a class="btn btn-secondary btn-block" asp-controller="cliente" asp-action="Cadastro" role="button">Voltar</a>
    </form>
</div>

